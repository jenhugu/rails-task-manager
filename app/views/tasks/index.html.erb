<h2>My list of tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete",
        task_path(task),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this task?" }
      %>
    </li>
  <% end %>
</ul>

<%= link_to("+ Add a new task", tasks_new_path) %>
